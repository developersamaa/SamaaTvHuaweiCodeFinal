<RelativeLayout
    android:id="@+id/parent_view"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeMoreContainer"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <com.google.android.gms.ads.doubleclick.PublisherAdView
                android:id="@+id/ad_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                ads:adSize="MEDIUM_RECTANGLE"
                ads:adUnitId="@string/home_en_mrec3"/>

            <LinearLayout
                android:id="@+id/framehealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/White"
                android:gravity="start"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/health_head1"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:text="HEALTH"
                    android:textColor="@color/heading1_black"/>

                <TextView
                    android:id="@+id/health_head2"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="NEWS"
                    android:textColor="@color/heading2_black"/>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />


            <LinearLayout
                android:id="@+id/framelife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/White"
                android:gravity="start"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/life_head1"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:text="LIFE STYLE"
                    android:textColor="@color/heading1_black"/>

                <TextView
                    android:id="@+id/life_head2"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="NEWS"
                    android:textColor="@color/heading2_black"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_lifestyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />


            <LinearLayout
                android:id="@+id/framesocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/White"
                android:gravity="start"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/social_head1"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:text="SOCIAL BUZZ"
                    android:textColor="@color/heading1_black"/>

                <TextView
                    android:id="@+id/social_head2"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="NEWS"
                    android:textColor="@color/heading2_black"/>

            </LinearLayout>
            <!--  Recycler View  -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_socialbuzz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />


            <LinearLayout
                android:id="@+id/framesci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/White"
                android:gravity="start"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/sci_head1"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:text="SCI TECH"
                    android:textColor="@color/heading1_black"/>

                <TextView
                    android:id="@+id/sci_head2"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="NEWS"
                    android:textColor="@color/heading2_black"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_scitech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />


            <LinearLayout
                android:id="@+id/frameweird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/White"
                android:gravity="start"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/weird_head1"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:text="WEIRD"
                    android:textColor="@color/heading1_black"/>

                <TextView
                    android:id="@+id/weird_head2"
                    style="@style/Base.TextAppearance.AppCompat.Display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="NEWS"
                    android:textColor="@color/heading2_black"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_weird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />

            <FrameLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ad_view3"
                android:background="@color/appfooter_color">


                <TextView
                    android:id="@+id/footer_head1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginBottom="2dp"
                    android:text="@string/copyright_samaatv"
                    android:textColor="@color/White"
                    android:textSize="12sp"/>

            </FrameLayout>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        layout="@layout/more_fetures_sublayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>