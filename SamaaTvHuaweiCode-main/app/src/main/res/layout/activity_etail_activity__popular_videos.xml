<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/container_fragment"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/White"
             android:clickable="true"
             android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer_popvideos"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_popvideos"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <FrameLayout
                android:id="@+id/footer_popvideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerView_popvideos"
                android:background="@color/appfooter_color"
                >


                <TextView
                    android:id="@+id/footer_head1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginBottom="2dp"
                    android:text="@string/copyright_samaatv"
                    android:textColor="@color/White"
                    android:textSize="12sp"/>

            </FrameLayout>


            <!--  <com.google.android.gms.ads.doubleclick.PublisherAdView
                  android:id="@+id/ad_view"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  ads:adSize="BANNER"
                  ads:adUnitId="@string/ad_unit_id_1"
                  android:layout_marginTop="5dp"
                  android:layout_gravity="center_horizontal" />-->

        </RelativeLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</FrameLayout>