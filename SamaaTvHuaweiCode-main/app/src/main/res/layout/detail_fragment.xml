<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/parent_view"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:fillViewport="true"
            android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <FrameLayout
            android:id="@+id/Framelayout"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/logo_samaatv"/>

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/videoplayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/play_vdo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:src="@drawable/play_button"
                android:visibility="gone"
                />


        </FrameLayout>

        <TextView
            android:id="@+id/title_detail"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Framelayout"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="TITLE"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/time_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/date_detail"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="10dp"
            android:contentDescription="news"
            android:src="@drawable/time"/>


        <TextView
            android:id="@+id/date_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_detail"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="date"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_body"/>

        <RelativeLayout
            android:id="@+id/ad_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_detail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"/>

        <View
            android:id="@+id/customview"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ad_view1"
            android:background="#5F9EA0"/>

        <TextView
            android:id="@+id/desc_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customview"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:autoLink="web"
            android:gravity="center_vertical"
            android:linksClickable="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="desc"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/ad_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_detail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/desc_detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ad_view2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <com.taboola.android.TaboolaWidget
            android:id="@+id/taboola_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ad_view2"/>

        <LinearLayout
            android:id="@+id/framealso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taboola_view"
            android:layout_gravity="start"
            android:background="@color/White"
            android:gravity="start"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/editor_head1"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="5dp"
                android:text="RELATED"
                android:textColor="@color/heading1_black"/>

            <TextView
                android:id="@+id/editor_head2"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="STORIES"
                android:textColor="@color/heading2_black"/>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/framealso"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rel_watch_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar2"
            android:layout_gravity="center_vertical"

            />

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/white"
            android:visibility="gone"/>

    </RelativeLayout>

</ScrollView>

