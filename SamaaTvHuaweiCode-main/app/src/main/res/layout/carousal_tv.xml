<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:id="@+id/framepop_tv_shows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/White"
            android:gravity="start"
            android:orientation="horizontal"
            >

            <ImageView

                android:id="@+id/img_tv_shows"
                android:layout_width="130sp"
                android:layout_height="80sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="10sp"
                android:scaleType="fitXY"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/playicon_tv_shows"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/title_tv_shows"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Framelayout"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="TITLE"
                android:textColor="@android:color/black"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/time_icon_tv_shows"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/date"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:contentDescription="news"
                android:src="@drawable/time"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/date_tv_shows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_tv_shows"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="date"
                android:textSize="@dimen/font_body"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/cate_tv_shows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/title_tv_shows"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="38dp"
                android:layout_toEndOf="@+id/date_tv_shows"
                android:layout_toRightOf="@+id/date_tv_shows"
                android:gravity="left"
                android:text="category"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/editor_head1_tv_shows"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="ALSO"
                android:textColor="@color/heading1_black"/>

            <TextView
                android:id="@+id/editor_head2_tv_shows"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="WATCH"
                android:textColor="@color/heading2_black"/>

            <RelativeLayout
                android:id="@+id/ad_tv_shows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:visibility="gone"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontal_view_tv_shows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/framepop_tv_shows"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"/>

        <!--  Recycler View  -->

    </RelativeLayout>


</LinearLayout>